<Window x:Class="Language.PhotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Language"
        mc:Ignorable="d"
        Title="PhotoWindow" Height="500" Width="400">
    <Grid Background="LightSlateGray">
        <Border Margin="20" CornerRadius="30" Background="Cornsilk" Padding="30" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" ShadowDepth="0" Color="Indigo" />
            </Border.Effect>
            <StackPanel>
                <Image Margin="0 0 0 20" x:Name="Anime"/>
                <Button Content="Загрузить фотографию..." x:Name="UploadPhotoButton" Click="UploadPhotoButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
